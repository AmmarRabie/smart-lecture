<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/groupContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="12dp"
    android:background="#eceff1"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/invitationItem_groupName"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        tools:text="CUFE-CMP2-database" />

        <TextView
            android:id="@+id/invitationItem_ownerName"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textAppearance="?android:textAppearanceSmall"
            tools:text="@tools:sample/full_names" />

    </LinearLayout>

    <ImageView
        android:id="@+id/invitationItem_refuse"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right|center"
        android:layout_marginRight="18dp"
        android:scaleType="centerCrop"
        android:tint="#d50000"
        android:src="@drawable/ic_cross" />

    <ImageView
        android:id="@+id/invitationItem_accept"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right|center"
        android:layout_marginRight="18dp"
        android:scaleType="centerCrop"
        android:tint="#64dd17"
        android:src="@drawable/ic_done" />




</LinearLayout>
