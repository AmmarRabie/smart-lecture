<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_expandable_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/activity_expandable_list_view_relative_layout"
            style="@style/AppTheme.Relative"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:id="@+id/grades_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/good_vertical_margin"
                android:paddingBottom="@dimen/good_vertical_margin"
                android:paddingLeft="@dimen/good_horizontal_margin"
                android:paddingRight="@dimen/good_horizontal_margin">

                <TextView
                    android:id="@+id/grades_text_highest_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Highest grade"
                    android:textColor="@color/yellow"
                    android:paddingBottom="@dimen/fab_margin"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/fab_margin"
                    >

                    <EditText
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textColor="@color/yellow"
                        android:id="@+id/grades_input_highest_grade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/yellow"
                        android:hint="grade"
                        android:paddingBottom="@dimen/fab_margin"
                        android:inputType="number"
                        />
                </android.support.design.widget.TextInputLayout>

                <TextView
                android:id="@+id/grades_text_lowest_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lowest grade"
                android:textColor="@color/yellow"
                android:paddingBottom="@dimen/fab_margin"
                android:textSize="20sp"
                android:textStyle="bold" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textColor="@color/yellow"
                        android:id="@+id/grades_input_lowest_grade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/yellow"
                        android:hint="grade"
                        android:paddingBottom="@dimen/fab_margin"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/grades_assign_grades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:src="@drawable/ic_add"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="end|bottom"
                android:layout_alignBottom="@id/grades_linear"
                android:onClick="onClick"
                app:backgroundTint="@color/yellow"
                app:fabSize="normal" />

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/grades_progress_bar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/grades_list_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</ScrollView>
